<% layout("/layouts/boilerplate") %>


  <h3>Edit your Listing</h3>
  <form class="listing-form" method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title:</label>
      <input class="input-field" id="title" name="listing[title]" value="<%= listing.title %>" type="text" required />
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea class="input-field textarea-field" id="description"
        name="listing[description]" required><%= listing.description %></textarea>
    </div>

    <div class="mb-3">
      original image <br>
      <img src="<%= originalImageUrl %>" alt="">
    </div>

    <div class="form-group">
      <label for="image">Upload new Image</label>
      <input class="input-field" id="image" name="listing[image]" type="file" />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="price">Price:</label>
        <input class="input-field" id="price" name="listing[price]" value="<%= listing.price %>" type="number" required/>
      </div>
      <div class="form-group">
        <label for="country">Country:</label>
        <input class="input-field" id="country" name="listing[country]" value="<%= listing.country %>" type="text" required/>
      </div>
    </div>
    <div class="form-group">
      <label for="location">Location:</label>
      <input class="input-field" id="location" name="listing[location]" value="<%= listing.location %>" type="text" required/>
    </div>
    <button class="submit-btn">Edit</button>
  </form>