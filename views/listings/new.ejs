<% layout("/layouts/boilerplate") %>


  <h3>Create a New Listing</h3>
  <form class="listing-form" method="POST" action="/listings" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title:</label>
      <input class="input-field" id="title" name="listing[title]" placeholder="Enter title" type="text" required />
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea class="input-field textarea-field" id="description" name="listing[description]"
        placeholder="Enter description" required></textarea>
    </div>

    <div class="form-group">
      <label for="image">Upload Image</label>
      <input class="input-field" id="image" name="listing[image]" type="file" required/>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="price">Price:</label>
        <input class="input-field" id="price" name="listing[price]" placeholder="Enter price" type="number" required />
      </div>
      <div class="form-group">
        <label for="country">Country:</label>
        <input class="input-field" id="country" name="listing[country]" placeholder="Enter country" type="text"
          required />
      </div>
    </div>
    <div class="form-group">
      <label for="location">Location:</label>
      <input class="input-field" id="location" name="listing[location]" placeholder="Enter location" type="text"
        required />
    </div>
    <button class="submit-btn">Add</button>
  </form>